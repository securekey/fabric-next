# Release Parameters
BASE_VERSION=1.4.1-0.0.6
IS_RELEASE=true

ARCH=$(go env GOARCH)

if [ $IS_RELEASE == false ]
then
  EXTRA_VERSION=snapshot-$(git rev-parse --short=7 HEAD)
  PROJECT_VERSION=$BASE_VERSION-$EXTRA_VERSION
else
  PROJECT_VERSION=$BASE_VERSION
fi

export FABRIC_NEXT_IMAGE_TAG=$ARCH-$PROJECT_VERSION

GO_MIN_VER=1.11
GO_MAX_VER=1.11.5
